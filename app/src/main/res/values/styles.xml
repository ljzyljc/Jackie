<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Base.Theme.Translation">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Base.Theme" parent="android:Theme.Holo.Light.NoActionBar">

        <!-- Window Style -->
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowAnimationStyle">@style/Oceansoft.Animation.Activity</item>
        <!--<item name="android:windowNoTitle">true</item>-->

        <item name="android:listViewStyle">@style/listViewStyle</item>

        <item name="android:gridViewStyle">@style/gridViewStyle</item>

        <!--<item name="android:dialogTheme">@style/alertDiolag</item>-->

        <item name="android:progressBarStyleHorizontal">@style/progressBarStyleHorizontal</item>

        <!--<item name="android:radioButtonStyle">@style/radioButtonStyle</item>-->

        <item name="android:actionBarStyle">@style/actionbarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_home_as_up</item>

        <!-- <item name="android:windowTranslucentNavigation">true</item> -->
        <item name="android:actionMenuTextAppearance">@style/ActionBar.Menu.TextAppearance
        </item>

        <item name="android:actionMenuTextColor">@android:color/white</item>

        <item name="android:buttonStyle">@style/buttonStyle</item>

        <item name="android:editTextStyle">@style/editTextStyle</item>

        <item name="android:textViewStyle">@style/textStyle</item>
    </style>
    <style name="Oceansoft.Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="progressBarStyleHorizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbardrawable</item>
    </style>

    <style name="actionbarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/title_bar_bg</item>
    </style>
    <style name="ActionBar.Menu.TextAppearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="listViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/item_selector</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/light_gray</item>
        <item name="android:scrollbars">none</item>

    </style>
    <style name="statusStyle">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="gridViewStyle" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/item_selector</item>
    </style>

    <style name="textStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">@dimen/title_textSize</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>


    <!--单选按钮样式-->
    <style name="radioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:button">@drawable/commonradio_bg</item>-->
        <item name="android:button">?android:attr/listChoiceIndicatorSingle</item>
        <!--设置单选按钮的图标和文字的间距-->
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/common_btn_bg1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@anim/anim_login_dlg</item>
    </style>
    <style name="ThemeDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:windowCloseOnTouchOutside">true</item>-->

    </style>
    <style name="inputLinLayoutStyle">
        <item name="android:background">@drawable/radius_white_five</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="titleStyle">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">#2C3135</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="content_text_Style">
        <item name="android:textSize">@dimen/content_textSize</item>
        <item name="android:textColor">#2C3135</item>
        <item name="android:singleLine">false</item>
    </style>


    <style name="time_text_Style">
        <item name="android:textSize">@dimen/small_textSize</item>
        <item name="android:textColor">@color/graylight</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
